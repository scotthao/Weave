<mx:VBox xmlns="weave.editors.*" 
		 xmlns:mx="http://www.adobe.com/2006/mxml" 
		 width="100%" 
		 height="100%" xmlns:ui="weave.ui.*">
	<mx:CheckBox
				 label="{lang('Show record identifiers when no data is available')}"
				 creationComplete="linkBindableProperty(Weave.properties.showEmptyProbeRecordIdentifiers, event.target, 'selected')"/>
	<mx:HBox verticalAlign="middle">
		<mx:CheckBox
					 label="{lang('Enable detailed geometry probing')}"
					 creationComplete="linkBindableProperty(Weave.properties.enableGeometryProbing, event.target, 'selected')"/>
		<ui:HelpComponent>Check this box to use the detailed geometry probing. This probing is accurate but may decrease performance.</ui:HelpComponent>
	</mx:HBox>
	
	<mx:HBox verticalAlign="middle">
		<mx:CheckBox
					 label="{lang('Enable probe animation')}"
					 creationComplete="linkBindableProperty(Weave.properties.enableProbeAnimation, event.target, 'selected')"/>
		<ui:HelpComponent>Check this box to enable animation of the probe layer.  The transparency of the probed shapes will cycle at a slow speed to help draw attention to what records are being probed.  This can be helpful in identifying small records that may not be noticed when probed or in low contrast situations such as viewing Weave on a projector.</ui:HelpComponent>
	</mx:HBox>

	<mx:HBox verticalAlign="middle">
		<mx:CheckBox id="enableBitmapFilters"
					 label="{lang('Enable extra bitmap filters')}"
					 selected="true"
					 creationComplete="linkBindableProperty(Weave.properties.enableBitmapFilters, event.target, 'selected')"
					 />
		<ui:HelpComponent>Check this box to enable extra bitmap filters used when probing or selecting</ui:HelpComponent>
	</mx:HBox>
	<mx:VBox visible="{enableBitmapFilters.selected}" includeInLayout="{enableBitmapFilters.selected}" paddingLeft="{indentPadding}">
		<ui:Indent label="{lang('Probe Inner Glow Color')}" toolTip="{lang('Set the inner glow color of probed points')}">
			<mx:ColorPicker
							creationComplete="linkBindableProperty(Weave.properties.probeInnerGlow.color, event.target, 'selectedColor' );"
							/>
		</ui:Indent>
		<ui:Indent label="{lang('Probe Inner Glow Strength')}" toolTip="{lang('Set the inner glow thickness of probed points')}">
			<mx:NumericStepper
							   maximum="255"
							   creationComplete="linkBindableProperty(Weave.properties.probeInnerGlow.strength, event.target, 'value' );"
							/>
		</ui:Indent>
		<ui:Indent label="{lang('Probe Inner Glow Alpha')}" toolTip="{lang('Set the inner glow opacity of probed points')}">
			<mx:NumericStepper
							   maximum="1"
							   stepSize="0.1"
							   creationComplete="linkBindableProperty(Weave.properties.probeInnerGlow.alpha, event.target, 'value' );"
							   />
		</ui:Indent>
		<ui:Indent label="{lang('Probe Outer Glow Color')}" 
					  toolTip="{lang('Set the outer glow color of probed points')}">
			<mx:ColorPicker
							creationComplete="linkBindableProperty(Weave.properties.probeOuterGlow.color, event.target, 'selectedColor' );"
							/>
		</ui:Indent>
		<ui:Indent label="{lang('Probe Outer Glow Strength')}" toolTip="{lang('Set the outer glow thickness of probed points')}">
			<mx:NumericStepper
							   maximum="255"
							   creationComplete="linkBindableProperty(Weave.properties.probeOuterGlow.strength, event.target, 'value' );"
							   />
		</ui:Indent>
		<ui:Indent label="{lang('Probe Outer Glow Alpha')}" toolTip="{lang('Set the outer glow opacity of probed points')}">
			<mx:NumericStepper
							   maximum="1"
							   stepSize="0.1"
							   creationComplete="linkBindableProperty(Weave.properties.probeOuterGlow.alpha, event.target, 'value' );"
							   />
		</ui:Indent>
	</mx:VBox>
	
	<mx:CheckBox label="{lang('Enable probe ToolTips')}" id="enableProbeToolTipCheck"
				 creationComplete="linkBindableProperty(Weave.properties.enableProbeToolTip, event.target, 'selected')"/>
	<mx:VBox visible="{enableProbeToolTipCheck.selected}" includeInLayout="{enableProbeToolTipCheck.selected}" paddingLeft="{indentPadding}">
		<ui:Indent label="{lang('Maximum records shown')}" toolTip="{lang('Set the maximum number of records displayed in probe toolTips')}">
			<mx:NumericStepper
							   maximum="20"
							   creationComplete="linkBindableProperty(Weave.properties.maxTooltipRecordsShown, event.target, 'value' );"
							   />
		</ui:Indent>
		<ui:Indent label="{lang('Probe Tooltip Background Color')}" toolTip="{lang('Set the background color of the probe text box')}">
			<mx:ColorPicker id="probeTooltipBackgroundColor" change="backgroundColorPicked()"/>
			<mx:Button label="{lang('Reset')}" click="Weave.properties.probeToolTipBackgroundColor.value = NaN;"/>
		</ui:Indent>
		<ui:Indent label="{lang('Probe Tooltip Background Alpha')}" toolTip="{lang('Set the background opacity of the probe text box')}">
			<mx:NumericStepper
							   maximum="1"
							   stepSize="0.1"
							   creationComplete="linkBindableProperty(Weave.properties.probeToolTipBackgroundAlpha, event.target, 'value' );"
							   />
		</ui:Indent>
		<ui:IndentTextInput
				label="{lang('Probe Tooltip Maximum Width')}"
				inputWidth="100" 
				creationComplete="linkBindableProperty(Weave.properties.probeToolTipMaxWidth, event.target, 'text' );"
			/>
	</mx:VBox>
	<mx:CheckBox label="{lang('Enable probe axis lines')}"
				 creationComplete="linkBindableProperty(Weave.properties.enableProbeLines, event.target, 'selected')"/>
	
	<mx:Script>
		<![CDATA[
			import mx.core.IToolTip;
			import mx.core.UIComponent;
			import mx.managers.ToolTipManager;
			
			import weave.Weave;
			import weave.api.linkBindableProperty;
			
			private const indentPadding:int = 24;
			
			override protected function childrenCreated():void
			{
				Weave.properties.probeToolTipBackgroundColor.addGroupedCallback(this, backgroundColorCallback, true);
			}
			private function backgroundColorCallback():void
			{
				var value:Number = Weave.properties.probeToolTipBackgroundColor.value;
				if (isNaN(value))
				{
					var tt:IToolTip = ToolTipManager.createToolTip('',0,0);
					value = (tt as UIComponent).getStyle('backgroundColor');
					ToolTipManager.destroyToolTip(tt);
				}
				
				probeTooltipBackgroundColor.selectedColor = value;
			}
			private function backgroundColorPicked():void
			{
				Weave.properties.probeToolTipBackgroundColor.value = probeTooltipBackgroundColor.selectedColor;
			}
		]]>
	</mx:Script>
</mx:VBox>
